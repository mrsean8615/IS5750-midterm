<% const name=locals.name || '' ; const email=locals.email || '' ; const password=locals.password || '' ; const
  confirm_password=locals.confirm_password || '' ; %>


  <main class="main">
    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>Sign Up</h1>
              <p class="mb-0">Create your account below.</p>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="/">Home</a></li>
            <li class="current">Sign Up</li>
          </ol>
        </div>
      </nav>
    </div>
    <!-- End Page Title -->

    <!-- Sign Up Section -->
    <section id="contact" class="contact section">
      <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4">
          <div class="col-lg-12 d-flex align-items-center justify-content-center">
            <form action="#" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
              <div class="row gy-4">
                <span class="text-danger" id="error">
                  <%=message || '' %>
                </span>
                <div class="col-md-12">
                  <input type="text" class="form-control" value="<%=name%>" name="name" placeholder="Full Name"
                    required />
                </div>

                <div class="col-md-12">
                  <input type="email" value="<%=email%>" class="form-control" name="email" placeholder="Email"
                    required />
                </div>

                <div class="col-md-12">
                  <input type="password" class="form-control" value="<%=password%>" name="password"
                    placeholder="Password" required />
                </div>

                <div class="col-md-12">
                  <input type="password" class="form-control" value="<%=confirm_password%>" name="confirm_password"
                    placeholder="Confirm Password" required />
                </div>

                <div class="col-md-12 text-center">
                  <div class="loading">Processing</div>
                  <div class="error-message"></div>
                  <div class="sent-message">Sign Up Successful!</div>

                  <button type="submit">Sign Up</button>
                  <p class="text-center mt-3">
                    Already have an account? <a href="/auth/login">Login here</a>
                  </p>
                </div>
              </div>
            </form>
          </div>
          <!-- End Sign Up Form -->
        </div>
      </div>
    </section>
    <!-- Sign Up Section -->
  </main>